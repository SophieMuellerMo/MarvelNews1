<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MarvelNews List Time style -->
    <style name="MarvelListTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/textColorNewsDetails</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- MarvelNews List Author and section style -->
    <style name="abovetitle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textColorNewsDetails</item>
    </style>

    <!-- MarvelNews List Title style -->
    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorNewsTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- MarvelNews List item padding style -->
    <style name="list_item_padding">
        <item name="android:paddingBottom">@dimen/general_padding</item>
        <item name="android:paddingEnd">@dimen/general_padding</item>
        <item name="android:paddingLeft">@dimen/general_padding</item>
        <item name="android:paddingRight">@dimen/general_padding</item>
        <item name="android:paddingStart">@dimen/general_padding</item>
    </style>

</resources>
